{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run file in OCaml",
            "type": "shell",
            "command": "ocaml",
            "args": [
                "-init",
                {
                    "value": "${file}",
                    "quoting": "escape"
                }
            ]
        },
        {
            "label": "run file in Python",
            "type": "shell",
            "command": "python",
            "args": [
                "-i",
               {
                    "value": "${file}",
                    "quoting": "escape"
               }
            ]
        }
    ]
}